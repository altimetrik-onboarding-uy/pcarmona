<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes" controller="WorkItemBoardController" access="global" >
    <aura:attribute name="rows" type="List"/>
    <aura:attribute name="columns" type="List"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <div class="slds-grid">
        <div class="slds-tabs--path" role="application">
            <ul class="slds-tabs--path__nav" role="tablist">
                <aura:iteration items="{!v.columns}" var="col">                
                    <li class="slds-tabs--path__item slds-is-incomplete" role="presentation">
                        <a class="slds-tabs--path__link" tabindex="-1" role="tab" href="javascript:void(0);">
                            <span class="slds-tabs--path__title slds-text-heading--medium">{!col}</span>
                        </a>
                    </li>
                </aura:iteration>
            </ul>
        </div>
    </div>
    
    <div class="slds-grid">
        <aura:iteration items="{!v.columns}" var="col">
            <div class="slds-col slds-size_1-of-4 slds-lane slds-has-dividers--around-space slds-scrollable_y">
                <aura:iteration items="{!v.rows}" var="wItem">
                    <aura:if isTrue="{!wItem.Status__c == col}">
                        
                        <c:WItemCard record="{!wItem}" />
                    </aura:if>
                </aura:iteration>
            </div>
        </aura:iteration>
    </div>
    
</aura:component>